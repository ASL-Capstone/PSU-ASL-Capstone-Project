<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_deck"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.psu.capstonew17.pdxaslapp.CreateDeckActivity">

    <Button
        android:id="@+id/bttn_create_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onCreateSubmitClicked"
        android:text="@string/button_submit" />

    <EditText
        android:id="@+id/createDeckNameField"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background4"
        android:gravity="center"
        android:hint="@string/CreateDeck_DeckName"
        tools:ignore="HardcodedText,LabelFor,TextFields" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/CreateDeck_SelectCards" />

    <include layout="@layout/list_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>