<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.psu.capstonew17.pdxaslapp.EditDeckActivity">

    <EditText
        android:id="@+id/editDeckNameField"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/background4"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        tools:ignore="HardcodedText,LabelFor,TextFields" />

    <!--TODO: need create layout for create/edit/delete deck activity-->
    <ListView
        android:id="@+id/editCardListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <LinearLayout
        android:layout_height="0dip"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:text="Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bttn_create_done"
            android:onClick="onEditDoneClicked"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>