<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_edit_delete_deck"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.psu.capstonew17.pdxaslapp.CreateEditDeleteDeckActivity">

    <!--TODO: need create layout for create/edit/delete deck activity-->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/deckRButtons"
        android:layout_weight="0"
        android:textColor="@android:color/black">
    </RadioGroup>


    <LinearLayout
        android:layout_height="0dip"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal">

       <Button
           android:text="Edit"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/bttnEdit"
           android:onClick="onEditClicked"
           android:layout_weight="1" />

        <Button
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bttnDlt"
            android:onClick="onDeleteClicked"
            android:layout_weight="1" />

        <Button
            android:text="Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bttnCrt"
            android:onClick="onCreateClicked"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>