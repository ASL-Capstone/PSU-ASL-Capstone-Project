<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.psu.capstonew17.pdxaslapp.VideoAspectRatioLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <VideoView
            android:layout_gravity="top|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:id="@+id/videoView" />

    </com.psu.capstonew17.pdxaslapp.VideoAspectRatioLayout>

    <ScrollView
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:background="@drawable/background10_option_bg"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:maxLines="5"
                android:textSize="15dp"
                android:text="@string/placeholder_answer"                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                />

            <TextView
                android:background="@drawable/background10_option_bg"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:maxLines="5"
                android:textSize="15dp"
                android:text="@string/placeholder_answer"                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                />

            <TextView
                android:background="@drawable/background10_option_bg"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:maxLines="5"
                android:textSize="15sp"
                android:text="@string/placeholder_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                />

            <TextView
                android:background="@drawable/background10_option_bg"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:maxLines="5"
                android:textSize="15dp"
                android:text="@string/placeholder_answer"                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                />
        </LinearLayout>
    </ScrollView>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">
        <include
            layout="@layout/submit_button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"

            >
        </include>
    </TableRow>


</LinearLayout>


